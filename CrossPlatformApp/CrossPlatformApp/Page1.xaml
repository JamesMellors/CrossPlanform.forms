<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CrossPlatformApp.Page1">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout Orientation="Vertical" Padding="30" Spacing="10">
            
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Enter Name" Font="Large" VerticalOptions="End"/>
            <Entry x:Name="entryName" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
            
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Enter Street" Font="Large" VerticalOptions="End"/>
                    <Entry x:Name="entryStreet" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            
                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Label Text="Enter PostCode" Font="Large" VerticalOptions="End"/>
                    <Entry x:Name="entryPostCode" HorizontalOptions="FillAndExpand"/>
                </StackLayout>
            
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>